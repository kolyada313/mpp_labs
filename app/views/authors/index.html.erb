<div class="container mt-5">
  <%= image_tag 'banner_author.jpg', class: 'img-fluid banner-image', style: "height: 365px;" %>
  <h1 class="text-center mt-4"><%= t('titles.all_authors') %></h1>
  <div class="text-center mb-4">
    <%= link_to t('links.back_to_home'), home_path, class: "btn btn-secondary" %>
  </div>

  <% if user_signed_in? %>
    <div class="row">
      <% @authors.each do |author| %>
        <div class="col-md-4 mb-4">
          <div class="author-card card">
            <%= image_tag 'author.jpg', class: "card-img-top", style: "width:100%; height: 250px;" %>
            <div class="card-body text-center">
              <% if current_user.admin? %>
                <h3 class="card-title"><%= link_to author.name, author_path(author) %></h3>
              <% else %>
                <h3 class="card-title"><%= author.name %></h3>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% if current_user.admin? %>
      <div class="text-center mt-4">
        <%= link_to t('links.add_new_author'), new_author_path, class: "btn btn-success" %>
      </div>
    <% end %>
  <% else %>
    <h1 class="text-center"><%= t('titles.sign_in') %></h1>
  <% end %>
</div>
