<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= t('titles.sign_in') %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
<nav class="navbar sticky-top navbar-light bg-dark bg-opacity-60">
  <div class="container-fluid justify-content-center">
    <div class="d-flex">
      <form action="/books" method="get" class="me-2">
        <input type="hidden" name="all" value="true">
        <button class="btn btn-outline-light ms-2" type="submit"><%= t('links.home_page') %></button>
      </form>
      <form action="/cabinet" method="get" class="me-2">
        <input type="hidden" name="all" value="false">
        <button class="btn btn-outline-light ms-2" type="submit"><%= t('links.personal_cabinet') %></button>
      </form>
      <form action="/createAdvert" method="get" class="me-2">
        <input type="hidden" name="all" value="false">
        <button class="btn btn-outline-light ms-2" type="submit"><%= t('links.create_advertisement') %></button>
      </form>
    </div>
  </div>
</nav>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

<br>
<form action="/createAccount" method="post">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="mb-3">
          <label for="formControlInput2" class="form-label"><%= t('forms.labels.email') %>*</label>
          <input type="email" class="form-control" id="formControlInput2" required placeholder="<%= t('placeholders.enter_email') %>">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <div class="mb-3">
          <label for="formControlInput3" class="form-label"><%= t('forms.labels.password') %>*</label>
          <input type="password" class="form-control" id="formControlInput3" required placeholder="<%= t('placeholders.enter_password') %>">
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <input type="submit" class="form-control" value="<%= t('buttons.sign_in') %>">
    </div>
  </div>
</form>

</body>
</html>
