<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
  </div>
  <%= image_tag 'banner.jpg', class: 'img-fluid banner-image mt-3' %>
  <h1 class="text-center"><%= t('titles.all_books') %></h1>
  <%= link_to t('links.search'), search_book_path, class: 'btn btn-primary btn-lg' %>
  <div class="row mt-4">
    <% @books.each do |book| %>
      <div class="col-md-4 mb-4">
        <div class="book-card card h-100">
          <%= image_tag 'placeholder.png', class: "card-img-top", style: "width:100%;" %>
          <div class="card-body">
            <h3 class="card-title"><%= link_to book.title, book %></h3>
            <p class="card-text description"><%= book.descr %></p>
            <%= link_to t('links.details'), book, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
