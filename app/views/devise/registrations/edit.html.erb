<% provide(:page_class, 'users-background') %>
<% provide(:container_class, 'registration-auth') %>
<% content_for :auth_page, true %>

<div class="registration-auth">
  <div class="auth-card card shadow-lg">
    <div class="card-body">
      <h2 class="auth-header"><%= t('titles.edit_user') %> <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control form-control-auth", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info"><%= t('messages.waiting_confirmation') %> <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %> <i><%= t('messages.leave_blank_password') %></i>
          <%= f.password_field :password, class: "form-control form-control-auth", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <div class="form-text"><%= @minimum_password_length %> <%= t('messages.minimum_password_length') %></div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control form-control-auth", autocomplete: "new-password" %>
        </div>

        <div class="mb-3">
          <%= f.label :current_password, class: "form-label" %> <i><%= t('messages.current_password_needed') %></i>
          <%= f.password_field :current_password, class: "form-control form-control-auth", autocomplete: "current-password" %>
        </div>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control form-control-auth" %>
        </div>

        <div class="mb-3">
          <%= f.label :city, class: "form-label" %>
          <%= f.text_field :city, class: "form-control form-control-auth" %>
        </div>

        <div class="mb-3">
          <%= f.label :phone_number, class: "form-label" %>
          <%= f.text_field :phone_number, class: "form-control form-control-auth" %>
        </div>

        <div class="mb-3">
          <%= f.label :age, class: "form-label" %>
          <%= f.text_field :age, class: "form-control form-control-auth" %>
        </div>

        <div class="text-center">
          <%= f.submit t('buttons.update'), class: "btn btn-primary auth-button btn-lg" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= button_to t('buttons.cancel_account'), registration_path(resource_name), data: { confirm: t('messages.confirm_cancel_account') }, method: :delete, class: "btn btn-danger auth-button mt-2 btn-lg" %>
      </div>

      <div class="text-center mt-4 auth-links">
        <%= link_to t('buttons.back'), _back_url, class: "btn btn-secondary auth-button" %>
      </div>
    </div>
  </div>
</div>
