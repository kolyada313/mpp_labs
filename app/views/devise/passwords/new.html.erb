<% provide(:page_class, 'users-background') %>
<% provide(:container_class, 'login') %>
<div class="auth-card card shadow-lg">
  <div class="card-body">
    <h2 class="auth-header"><%= t('titles.forgot_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, t('labels.email') %><br />
        <%= f.email_field :email, class: "form-control form-control-auth", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit t('buttons.send_reset_instructions'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
